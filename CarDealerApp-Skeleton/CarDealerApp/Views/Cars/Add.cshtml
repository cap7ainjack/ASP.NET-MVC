@using System.Collections.Generic
@using CarDealer.Models.ViewModels;

@model IEnumerable<PartForCarViewModel>

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new car with parts</h2>

<form class="form-horizontal" method="post">

    @Html.Editor("Make", new { htmlAttributes = new { @class = "form-control", @placeholder = "Make" } })
    <br />

    @Html.Editor("carModel", new { htmlAttributes = new { id = "Model", @class = "form-control", @placeholder = "Model" } })
    <br />
    @Html.Editor("travelledDistance", new { HtmlAttributes = new { @type = "number", @step = "1000", @min = "0", @value = "0", @class = "form-control", @placeholder = "Travelled Distance" } })
    <br />
    @Html.Label("Part 1")
    <select name="part1" id="part1" class="form-control">
        @foreach (var part in Model)
        {
            <option value="@part.Id">@part.Name</option>
        }
    </select>
    <br />
    @Html.Label("Part 2")
    <select name="part2" id="part2" class="form-control">
        @foreach (var part in Model)
        {
            <option value="@part.Id">@part.Name</option>
        }
    </select>
    <br />
    @Html.Label("Part 3")
    <select name="part3" id="part3" class="form-control">
        @foreach (var part in Model)
        {
            <option value="@part.Id">@part.Name</option>
        }
    </select>
    <br />
    <input type="submit" value="ADD" class="btn btn-success" />
    <a href="/Cars/" class="btn btn-danger">CANCEL</a>
</form>