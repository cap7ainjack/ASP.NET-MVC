@model  KidsAcademy.Models.ViewModels.User.EditUserVM

@{ 
    ViewBag.Title = "Edit Profile";
}

<h2>Редакция на профила: </h2>

@using (Html.BeginForm())
{
    @*@Html.HiddenFor(vm => vm.Id)*@

    <div class="form-group">
        @Html.LabelFor(vm => vm.FirstName)
        @Html.EditorFor(vm => vm.FirstName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.LastName)
        @Html.EditorFor(vm => vm.LastName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.PhoneNumber)
        @Html.EditorFor(vm => vm.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="form-control" />
    </div>
}